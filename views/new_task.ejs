<%- include('partials/header') %>

<h1>New task</h1>
<form method="post" action="/tasks/new" class="form">
  <label>
    <div class="lbl">Title</div>
    <input name="title" placeholder="e.g. Draft plan for X" required />
  </label>

  <label>
    <div class="lbl">Project</div>
    <input name="project" value="Mission Control" placeholder="e.g. Mission Control" />
    <div class="hint">High-level project label for tracking tokens/cost and organizing work.</div>
  </label>

  <label>
    <div class="lbl">Assign to agent</div>
    <select name="agent_id">
      <% for (const a of agents) { %>
        <option value="<%= a.id %>"><%= a.id %></option>
      <% } %>
    </select>
    <div class="hint">Pulled from registered OpenClaw agents.</div>
  </label>

  <label>
    <div class="lbl">Description</div>
    <textarea name="description" rows="8" placeholder="What should be done? Acceptance criteria? Links?"></textarea>
  </label>

  <button class="btn primary" type="submit">Add to queue</button>
</form>

<%- include('partials/footer') %>
